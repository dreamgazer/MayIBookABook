@model IEnumerable<Mayibookabook.Models.book>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "已借书籍";
}

<h2>已借书籍</h2>

<p>
    @Html.ActionLink("新建条目", "Create")|
    @Html.ActionLink("返回管理界面首页", "Index","Manage")
</p>
@using (Html.BeginForm(new { @class = "form-horizontal", role = "form" }))
{
    <p>
        书名含有：@Html.TextBox("searchString")
        <input type="submit" class="btn btn-default" value="搜索" />

    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.press)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.borrowerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.borrowercontact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.borrowername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lenderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lendercontact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lendername)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.press)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.borrowerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.borrowercontact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.borrowername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lenderID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lendercontact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lendername)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id = item.ID }) |
            @Html.ActionLink("详细信息", "Details", new { id=item.ID }) |
            @Html.ActionLink("删除", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))